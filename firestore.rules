rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ===== Users Collection =====
    match /users/{userId} {
      // Anyone can read user profiles (to get anonymous names)
      allow read: if true;
      // A user can create their own profile
      allow create: if request.auth != null && request.auth.uid == userId;
      // A user can only update their own profile
      allow update: if request.auth != null && request.auth.uid == userId;
    }

    // ===== Chat Rooms Collection =====
    match /chatRooms/{roomId} {
      // Anyone can read or list chat room metadata
      allow read: if true;

      // Only authenticated users can create new chat rooms
      allow create: if request.auth != null;

      // For now, disallow updates to room metadata after creation
      allow update: if false;

      // No one can delete a chat room
      allow delete: if false;

      // ===== Messages Subcollection =====
      match /messages/{messageId} {
        // Any authenticated user can read messages in any room
        allow read: if request.auth != null;
        // Any authenticated user can write messages to any room
        allow create: if request.auth != null;
        // Nobody can update or delete messages directly
        allow update, delete: if false;
      }
    }
  }
}
