rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ===== Users Collection =====
    match /users/{userId} {
      // Anyone can read user profiles (to get anonymous names)
      allow read: if true;
      // A user can create their own profile
      allow create: if request.auth != null && request.auth.uid == userId;

      // ===== User Inbox Subcollection =====
      match /inbox/{messageId} {
        // A user can only read from their own inbox
        allow get, list: if request.auth != null && request.auth.uid == userId;

        // Any authenticated user can write to another user's inbox (i.e., send a message)
        allow create: if request.auth != null;

        // Nobody can update or delete inbox messages directly
        allow update, delete: if false;
      }
    }

    // ===== Chat Rooms Collection =====
    match /chatRooms/{roomId} {
      // Anyone can read or list chat room metadata
      allow read: if true;

      // Only authenticated users can create new chat rooms
      allow create: if request.auth != null;

      // Authenticated users can update a room's participants list
      allow update: if request.auth != null
                    && request.resource.data.diff(resource.data)
                    .affectedKeys().hasOnly(['participants']);
      // No one can delete a chat room
      allow delete: if false;
    }
  }
}
