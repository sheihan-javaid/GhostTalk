rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Chat rooms collection
    match /chatRooms/{roomId} {

      // Anyone can read or list chat room metadata
      allow read, list: if true;

      // Only authenticated users can create chat rooms
      allow create: if request.auth != null;

      // Allow updating only for adding public keys (E2EE)
      allow update: if request.auth != null
                    && request.resource.data.diff(resource.data)
                    .affectedKeys().hasOnly(['publicKeys']);

      // Prevent deletion
      allow delete: if false;

      // Messages subcollection
      match /messages/{messageId} {

        // Authenticated users can read and list messages inside any room
        allow read, list, get: if request.auth != null;

        // Authenticated users can send messages
        allow create: if request.auth != null;

        // Prevent manual modification or deletion
        allow update, delete: if false;
      }
    }
  }
}
