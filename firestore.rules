rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ===== Users Collection =====
    match /users/{userId} {
      // Anyone can read user profiles (to get anonymous names)
      allow read: if true;
      // A user can create their own profile
      allow create: if request.auth != null && request.auth.uid == userId;
      // A user can only update their own profile
      allow update: if request.auth != null && request.auth.uid == userId;
    }

    // ===== Chat Rooms Collection =====
    match /chatRooms/{roomId} {
      // Any authenticated user can read room metadata to find rooms
      allow get, list: if request.auth != null;

      // Authenticated users can create rooms
      allow create: if request.auth != null;

      // Allow authenticated users to add/update their own entry in the participants map
      allow update: if request.auth != null &&
                      request.resource.data.diff(resource.data).affectedKeys()
                        .hasOnly(['participants', 'participants.' + request.auth.uid]);

      // No one can delete a chat room
      allow delete: if false;

      // ===== Messages Subcollection =====
      match /messages/{messageId} {
        // Any authenticated user can read or list messages in any room.
        // Users will decrypt messages on the client.
        allow read, list: if request.auth != null;
        
        // Any authenticated user can write messages to any room.
        allow create: if request.auth != null;

        // Nobody can update or delete messages directly
        allow update, delete: if false;
      }
    }
  }
}
