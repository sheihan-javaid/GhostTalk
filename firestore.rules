rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Chat rooms collection
    match /chatRooms/{roomId} {

      // Anyone can read or list chat room metadata
      allow read, list: if true;

      // Only authenticated users can create chat rooms
      allow create: if request.auth != null;

      // Allow updating only for adding public keys (E2EE)
      allow update: if request.auth != null
                    && request.resource.data.diff(resource.data)
                    .affectedKeys().hasOnly(['publicKeys']);

      // Prevent deletion
      allow delete: if false;

      // Messages subcollection
      match /messages/{messageId} {

        // A user can read a single message if they are the recipient.
        allow get: if request.auth != null && resource.data.recipientId == request.auth.uid;
        
        // A user can query messages if they are asking for messages sent to them.
        // This is the CRITICAL fix. It checks that the query's `where` clause is correct.
        allow list: if request.auth != null 
                     && request.query.where.size() == 1
                     && request.query.where[0].field == "recipientId"
                     && request.query.where[0].op == "=="
                     && request.query.where[0].value == request.auth.uid;

        // Authenticated users can send messages
        allow create: if request.auth != null;

        // Prevent manual modification or deletion
        allow update, delete: if false;
      }
    }
  }
}