rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Chat rooms collection
    match /chatRooms/{roomId} {
      // Anyone (even anonymous/custom auth) can read chat room metadata
      allow read, list: if true;

      // Only authenticated users can create new chat rooms
      allow create: if request.auth != null;

      // Authenticated users can update a room (e.g., public keys for E2EE)
      allow update: if request.auth != null
                    && request.resource.data.diff(resource.data)
                    .affectedKeys().hasOnly(['publicKeys']);

      // No one can delete a chat room
      allow delete: if false;

      // Messages subcollection
      match /messages/{messageId} {

        // Authenticated users can create messages
        allow create: if request.auth != null;

        // Authenticated users can read messages in this room
        // You can strengthen this later with room membership validation
        allow read, list: if request.auth != null;

        // Disable update or delete (handled by server-side TTL)
        allow update, delete: if false;
      }
    }
  }
}
